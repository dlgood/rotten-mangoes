<%= form_tag("/search", method: "get") do %>
<p>Search for a movie: </p>
  <div>
    <%= label_tag(:title, "Title") %><br>
    <%= text_field_tag(:title) %>
  </div>
  <div>
    <%= label_tag(:director, "Director") %><br>
    <%= text_field_tag(:director) %>
  </div>
  <div>
    <%= label_tag(:duration, "Duration") %><br>
    <%= select_tag :duration, 
      options_for_select([
      ['Under 90 Minutes', 1],
      ['Between 90 and 120 Minutes', 2],
      ['More than 120 Minutes', 3]]), include_blank: true %>
  </div>
  <div>
    <%= submit_tag "Submit" %> 
  </div>
<% end %>